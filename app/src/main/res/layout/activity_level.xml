<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right|center_horizontal|top"
    tools:context=".LevelActivity">

    <FrameLayout
        android:id="@+id/PauseMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:foregroundGravity="center"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/PausedMenuBackground"
            android:layout_width="303dp"
            android:layout_height="434dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/banner_vertical" />

        <TextView
            android:id="@+id/Paused_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:text="Paused" />

        <FrameLayout
            android:id="@+id/CloseBttnFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp">

            <ImageButton
                android:id="@+id/CloseBttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:background="#00000000"
                android:contentDescription="CloseButton"
                android:contextClickable="true"
                app:srcCompat="@drawable/button_red" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="45dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:clickable="false"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>