<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#363760"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/stars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/background_desc"
        android:contextClickable="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/stars" />

    <FrameLayout
        android:id="@+id/PlayBttnFrame"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="225dp"
        android:layout_marginBottom="180dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/playBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:contentDescription="@string/armoury_desc"
            android:maxWidth="101dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ui_flat_button_large_lock_01a1"
            tools:ignore="RedundantDescriptionCheck,VisualLintBounds" />

        <TextView
            android:id="@+id/play_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Play"
            android:textColor="#232323"
            android:textSize="19sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/OptionsBttnFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="183dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/optionsBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:contentDescription="@string/options_desc"
            android:maxWidth="101dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ui_flat_button_large_lock_01a1"
            tools:ignore="VisualLintBounds,RedundantDescriptionCheck" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Options"
            android:textColor="#232323"
            android:textColorHint="#303030"
            android:textSize="19sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/BattlePassBttnFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="225dp"
        android:layout_marginBottom="100dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/battlesPassBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:contentDescription="@string/battlepass_desc"
            android:maxWidth="101dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ui_flat_button_large_lock_01a1"
            tools:ignore="RedundantDescriptionCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="BattlePass"
            android:textColor="#232323"
            android:textColorHint="#303030"
            android:textSize="16sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/ArmouryBttnFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="100dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/armouryBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:contentDescription="@string/armoury_desc"
            android:maxWidth="101dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ui_flat_button_large_lock_01a1"
            tools:ignore="RedundantDescriptionCheck,VisualLintBounds" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Armoury"
            android:textColor="#232323"
            android:textColorHighlight="#242424"
            android:textColorHint="#303030"
            android:textSize="17sp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/Chrono_Heist"
        android:layout_width="394dp"
        android:layout_height="122dp"

        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@drawable/logo" />

    <TableLayout
        android:id="@+id/MapSelectTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Chrono_Heist"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:stretchColumns="*"
        android:visibility="gone">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="#00FFFFFF"
            android:foregroundTint="#00FFFFFF">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/level1Bttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#00FFFFFF"
                    app:srcCompat="@drawable/level_1__custom_" />

                <TextView
                    android:id="@+id/lvl1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|start"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/aldrich"
                    android:text="Level 1"
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lvl1Difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/aldrich"
                    android:text="Easy"
                    android:textAlignment="center"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    app:srcCompat="@drawable/level_1__custom_" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    app:srcCompat="@drawable/level_1__custom_" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </FrameLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/level_1__custom_" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/level_1__custom_" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/level_1__custom_" />
        </TableRow>
    </TableLayout>

</RelativeLayout>